IF(UNIX)
	SET(SG_PLATFORM_NAME "linux")
    SET(SG_BUILD_PLATFORM_LINUX TRUE)
ENDIF()

IF(NOT SG_ARCH_NAME)
	IF((CMAKE_SYSTEM_PROCESSOR MATCHES "AMD64") OR (CMAKE_SYSTEM_PROCESSOR MATCHES "x86_64"))
		SET(SG_ARCH_NAME "x64")
	ELSE()
		SET(SG_ARCH_NAME "x86")
	ENDIF()
ENDIF()


SET(SG_PLATFORM_NAME ${SG_PLATFORM_NAME}_${SG_ARCH_NAME})

SET(SG_PREFERRED_LIB_TYPE "SHARED")

